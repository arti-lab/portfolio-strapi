{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "summary": {
      "type": "text"
    },
    "mdx": {
      "type": "richtext"
    },
    "publishDate": {
      "type": "datetime"
    },
    "readingTime": {
      "type": "string"
    },
    "banner": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    }
  }
}
